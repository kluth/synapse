{
  "name": "@synapse-framework/core",
  "version": "0.1.0",
  "description": "A TypeScript full-stack framework inspired by the nervous system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "synapse": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli/index.js",
    "build:bun": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest",
    "test:bun": "bun test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "dev:e2e": "vite --config e2e/demo-app/vite.config.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit --project tsconfig.eslint.json",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "framework",
    "typescript",
    "microservices",
    "distributed-systems",
    "neural-network",
    "synapse",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/html-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.46.3",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "events": "^3.3.0",
    "globals": "^16.5.0",
    "husky": "^9.0.10",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.2.5",
    "storybook": "^8.6.14",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "zod": "^4.1.12"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
